{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": false,
    "strict": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["jest.config.js", "dist", "coverage", "jest-unit-config.ts"],
  "files":["custom.d.ts"]
}
